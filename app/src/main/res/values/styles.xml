<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
        <item name="android:animation">@integer/high_duration</item>
        <item name="android:width">@dimen/dialog_fixed_width_minor</item>

    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_top</item>
    </style>

</resources>
